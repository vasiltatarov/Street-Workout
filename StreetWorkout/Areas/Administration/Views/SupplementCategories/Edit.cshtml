@model SupplementCategoryEditServiceModel
@{
    ViewData["Title"] = "Edit Supplement Category";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-10 offset-xl-1 col-xl-10">
            <h1 class="text-center">@ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Workout Title">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <input type="submit" class="btn btn-success" value="Edit" />
                <a asp-area="Administration" asp-controller="SupplementCategories" asp-action="All" class="btn btn-info">Cancel</a>
            </form>
        </div>
    </div>
</div>