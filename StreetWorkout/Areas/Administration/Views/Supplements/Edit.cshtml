@model SupplementFormModel
@{
    this.ViewData["Title"] = "Edit " + this.Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-sm-12 offset-lg-2 col-lg-10 offset-xl-1 col-xl-10">
            <h1 class="text-center">@this.ViewData["Title"]</h1>
            <form method="post">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" placeholder="Supplement Name">
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId"></label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="0">--- Select Category ---</option>
                        @foreach (var category in this.Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Supplement ImageUrl">
                    <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content"></label>
                    <textarea asp-for="Content" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="Content" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" type="text" class="form-control">
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" placeholder="Weight in Grams." />
                    <span asp-validation-for="Quantity" class="text-danger small"></span>
                </div>
                <input type="submit" class="btn btn-info" value="Edit" />
                <a asp-area="" asp-controller="Supplements" asp-action="Details" asp-route-id="@this.TempData["SupplementIdKey"]" class="btn btn-danger">Cancel</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/tinymce/tinymce.min.js" type="text/javascript" asp-append-version="true"></script>
    <script src="~/js/tinymce.js" type="text/javascript" asp-append-version="true"></script>
}